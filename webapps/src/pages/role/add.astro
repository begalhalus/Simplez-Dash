---
import { Authentication } from "../../components/global/Authentication";
import { API_URL } from "@globals";

const cookie = Astro.request.headers.get("cookie");
const token = JSON.parse(
  cookie.substring(cookie.indexOf("{"), cookie.lastIndexOf("}") + 1)
).token;
---

<Authentication />
<div class="col-xl-12">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Add Role Access</h4>
      <p class="card-title-desc">
        Fitur penambahan role akses untuk memudahkan manajemen role.
      </p>

      <div
        class="alert alert-warning alert-dismissible fade show"
        role="alert"
        style="display:none;"
      >
        <i class="mdi mdi-alert-outline me-2"></i>
        <span id="error-message"></span>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"></button>
      </div>

      <form
        class="custom-validation"
        data-href={`${API_URL}/user/v1/role/create`}
        data-token={`${token}`}
        id="forms"
      >
        <div class="mb-3">
          <label class="form-label">Role Name</label>
          <input
            type="text"
            name="name"
            class="form-control"
            required
            autocomplete="off"
            placeholder="Role Name"
          />
        </div>

        <div class="mb-3">
          <label class="form-label">Description</label>
          <div>
            <textarea
              required
              class="form-control"
              name="description"
              rows="3"
              autocomplete="off"
              placeholder="Description"></textarea>
          </div>
        </div>
        <div class="d-flex flex-wrap gap-2">
          <a
            href="#"
            class="btn btn-primary waves-effect waves-light"
            id="simpanButton"
          >
            Simpan
          </a>
          <a href="#" class="btn btn-secondary waves-effect" id="closeModal">
            Batal
          </a>
        </div>
      </form>
    </div>
  </div>
</div>
